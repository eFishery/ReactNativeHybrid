# editorconfig.org
root = true

# For every file in root directory
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# For bin/www
[bin/www]
indent_style = space
indent_size = 2

# Markdown in root directory
[*.md]
trim_trailing_whitespace = false

# JS files in the whole project
[**.{js,json}]
indent_style = space
indent_size = 2

# SCSS, CSS files in the whole project
[**.{scss,css}]
indent_style = space
indent_size = 2
